{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "1.26.1",
  "icons": {
    "16": "src/assets/icon.png",
    "32": "src/assets/icon.png",
    "48": "src/assets/icon.png",
    "128": "src/assets/icon.png"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {},
  "host_permissions": [
    "https://*.bing.com/",
    "https://*.openai.com/",
    "https://claude.ai",
    "https://bard.google.com/",
    "https://*.chathub.gg/"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "sidePanel"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "src/content-script/chatgpt-inpage-proxy.ts-loader.js"
      ]
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": [
        "src/content-script/claude-inpage-proxy.ts-loader.js"
      ]
    }
  ],
  "commands": {
    "open-app": {
      "suggested_key": {
        "default": "Alt+J",
        "windows": "Alt+J",
        "linux": "Alt+J",
        "mac": "Command+J"
      },
      "description": "Open ChatHub app"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "use_dynamic_url": true,
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ]
    }
  ]
}
